{
  "name": "task-management",
  "version": "1.0.0",
  "description": "Task management system",
  "main": "./dist/server.js",
  "engines": {
    "node": ">=10.16.3",
    "npm": ">=6.9.0"
  },
  "scripts": {
    ".": "nodemon --watch src --watch libs ./src/server.ts",
    "start": "npm run build && node ./dist/server.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "watch-node": "nodemon --inspect=0.0.0.0:9229 .",
    "build": "ttsc -p .",
    "build-ts": "ttsc",
    "watch-ts": "tsc -w",
    "start:prod": "npm run build && pm2 start pm2.yaml -n task-management --env production",
    "delete": "pm2 delete task-management-app",
    "stop": "pm2 stop task-management-app",
    "lint": "tsc --noEmit && eslint \"./src/*.{js,ts}\" --quiet",
    "test": "NODE_ENV=testing jest --no-cache --coverage --silent --passWithNoTests --detectOpenHandles --forceExit",
    "migration:create": "ts-node -r ./src/register-module-alias.ts ./node_modules/typeorm/cli.js --config src/ormconfig-cli.ts migration:create",
    "migration:generate": "ts-node -r ./src/register-module-alias.ts ./node_modules/typeorm/cli.js --config src/ormconfig-cli.ts migration:generate",
    "migration:run": "ts-node -r ./src/register-module-alias.ts ./node_modules/typeorm/cli.js --config src/ormconfig-cli.ts migration:run",
    "migration:revert": "ts-node -r ./src/register-module-alias.ts ./node_modules/typeorm/cli.js --config src/ormconfig-cli.ts migration:revert",
    "test:ci": "npm run test",
    "test:compose": "docker-compose up --abort-on-container-exit --build"
  },
  "lint-staged": {
    "./src/*": [
      "npm run format",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "keywords": [
    "node.js",
    "javascript",
    "typescript",
    "express",
    "mysql",
    "typeorm"
  ],
  "author": "Phat Vo <tanphatqth3@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "class-validator": "^0.13.1",
    "class-validator-jsonschema": "^2.2.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.6.0",
    "eslint-config-prettier": "^6.15.0",
    "event-stream": "^4.0.1",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "glob": "^7.1.7",
    "helmet": "^3.23.3",
    "ioredis": "^4.27.9",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "pm2": "^4.5.6",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^8.10.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.37",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/body-parser": "^1.19.1",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/helmet": "0.0.44",
    "@types/jest": "^27.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^12.20.23",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-standard": "^4.1.0",
    "factory-girl": "^5.0.4",
    "faker": "^5.5.3",
    "husky": "^4.3.8",
    "ioredis-mock": "^5.6.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-pre-gyp": "0.12.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standard": "^14.3.4",
    "supertest": "^6.1.6",
    "ts-jest": "^26.5.6",
    "tsconfig-paths": "^3.11.0",
    "ttypescript": "^1.5.12",
    "typescript": "^3.9.10",
    "typescript-transform-paths": "^2.2.4"
  }
}
